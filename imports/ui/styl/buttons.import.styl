button
	font-stack( "Helvetica" )
	background none
	display inline-block
	padding 7px 14px
	font-size 14px
	font-weight 400
	color #fff
	text-align center
	border-radius 3px
	letter-spacing 1px
	transition background 200ms ease
	&.btn-success
		background transparent
		border 2px solid #b3e4b9
		color #b3e4b9
		border-radius 16px
		transition background 200ms ease
		&:hover
			background darken(#98d29f, 80)
		
		
// ICON BUTTONS
.btn
	cursor pointer
	fontsizer(18px, 24px)

