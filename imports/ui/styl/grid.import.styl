@lost gutter 60px;

.container
	position relative
	lost-center 1280px 60px
	margin-top 60px
.grid-parent
	lost-utility clearfix
	width 100%
	& > *
		lost-column 1/3 2
		
		
.grid-6
	lost-utility clearfix
	width 100%
	& > *
		lost-column 1/6
.waffle-parent-3
	width 100%
	lost-utility clearfix
	& > *
		lost-waffle 1/3
.waffle-6
	display block
	width 100%
	padding 20px 0
	lost-center 96%
	lost-utility clearfix
	& > *
		lost-waffle 1/6 6 20px


for num in (1..12)
	.col-{num}
		lost-column num/12
	