@import './variables.import';

// THUMBNAIL ITEMS
for name, size in sizes
	.thumb-{name}
		width (size)vw
		height @width
		& > i
			font-size (size/2)vw
			
			
.remove
	color red
.edit
	color orange
.upload
	color blue
	



.autocomplete
	absolute 90% false false 0
	width 100%
	border 1px solid #eaae6b
	border-top 0
	border-radius 0 0 12px 12px
	background #000
	z-index 999
	max-height 300px
	overflow auto


.thumbnail
	@extend .vh-center
	border-radius 50%
	border 4px solid rgba(orange, 0.5)
	background-color orange
	background-repeat no-repeat
	background-position 50% 50%
	background-size auto
	cursor pointer
	margin 0 auto
	&.loading
		background-image url('/img/loader.svg')
		
.location-thumb
	@extend .vh-center
	border-radius 50%
	width 10vw
	height 10vw
	border 5px solid #f0f0f0
	margin 0 auto
	i
		line-height 1
		color darken(#f0f0f0, 5)
.location-name
	display inline-block
	margin 10px auto 0
	width 60%
	color #202020
	i
		color #eaae6b