.at-form
	position fixed
	width 35%
	max-width 420px
	border 1px solid #c3c3c3
	border-radius 4px
	top 50%
	left 50%
	padding 2%
	background rgba(255,255,252,0.97)
	transform translate(-50%,-50%)
	z-index 999
	.at-title
		display none
	& + .backdrop
		position fixed
		width 100vw
		height 100vh
		background rgba(0,0,0,0.5)
		z-index 1
		top 0
		left 0
	.at-sep
		border-top 1px solid #999
		text-align center
		margin 20px 0
		strong
			display block      
			border-radius 50%
			background #fff
			margin -10px auto
			width 15%
	label
		display block
		font-size 22px
	input
		line-height normal
		width 100%
		height 46px
		border 1px solid rgba(33,33,33,0.1)
		border-radius 4px
		padding 0 10px
		margin 10px 0
		background rgba(255,255,255,0.3)
		font-size 20px
	#at-facebook
		background #3B5998
		color #fff
		width 100%
		height 46px
		font-size  22px
		border 1px solid darken(#3B5998, 20)
	.submit
		background #58a28a
		height 46px
		font-size 26px
		width 100%
		border 1px solid darken(#58a28a, 20)
		line-height 1
.profile
	absolute 0 0 false false 
	padding-top 15px
	z-index 1001
	span
		display inline-block
		color darken(#fff, 10)
		font-size 14px
		margin-right 10px
	.logout-btn
		background none
		border 0
		padding 3px 6px
		border-radius 6px
		color lighten(#67777b, 10)
		transition background 200ms ease-out
		&:active, &:focus
			outline 0
		&:hover
			background darken(#67777b, 37)