@import './variables.import';
*
	box-sizing border-box
html,body
	font-family 'Helvetica Thin', 'Helvetica Neue', arial, sans-serif;
	*
		font-family 'Helvetica Thin', 'Helvetica Neue', arial, sans-serif;
		font-weight 300
	strong
		font-weight 700
	margin 0
	padding 0
	height 100%
	
input, select, textarea
	
	&:focus, &:active
		outline none
header
	position absolute
	top 0
	left 0
	width 100%
	min-height 40px
	
ul, li
	padding 0
	margin 0
	
.backdrop
	background rgba(0,0,0,0.99)
	fixed 0 0 0 0
	width 100%
	height 100%
	z-index 1002

.page-wrap
	padding-top 50px
	height 100%
	background rgba(#fff, 0.97)
		

.bank-page
	padding 120px 4% 20px
	min-height 100%